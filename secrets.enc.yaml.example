# SOPS secrets template for terraform-proxmox (YAML format - legacy)
#
# NOTE: The preferred approach is terraform.sops.json (JSON format) which
# integrates natively with Terragrunt's sops_decrypt_file() function.
# See terraform.sops.json.example and docs/SOPS_SETUP.md for the new workflow.
#
# This YAML format exports environment variables and requires manual shell eval.
# The JSON format is read natively by Terragrunt - no shell eval needed.
#
# To use this legacy approach:
#   cp secrets.enc.yaml.example secrets.enc.yaml
#   sops --encrypt --in-place secrets.enc.yaml

# BPG Proxmox provider (reads PROXMOX_VE_* env vars directly)
PROXMOX_VE_ENDPOINT: "https://example.local:8006"
PROXMOX_VE_API_TOKEN: "user@realm!tokenid=your-token-here"
PROXMOX_VE_USERNAME: "user@realm"
PROXMOX_VE_NODE: pve
PROXMOX_VE_INSECURE: "true"

# SSH access
PROXMOX_SSH_USERNAME: root
PROXMOX_SSH_PRIVATE_KEY: /path/to/your/ssh/key

# Splunk credentials
SPLUNK_PASSWORD: your-splunk-password-here
SPLUNK_HEC_TOKEN: your-hec-token-here
