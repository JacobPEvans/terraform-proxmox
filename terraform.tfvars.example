# Proxmox Configuration Example
# Copy this file to terraform.tfvars and customize for your environment

# Proxmox API Configuration
proxmox_api_endpoint = "https://your-proxmox-server.local:8006/api2/json"
proxmox_api_token    = "terraform@pve!terraform=your-api-token-here"
proxmox_insecure     = true

# Proxmox Node Configuration
proxmox_node     = "pve"
proxmox_username = "proxmox"

# SSH Configuration for Proxmox Host
proxmox_ssh_username    = "root@pam"
proxmox_ssh_private_key = "~/.ssh/id_rsa_pve"

# SSH Configuration for VMs
# These paths should point to your VM SSH keys
vm_ssh_public_key_path  = "~/.ssh/id_rsa_vm.pub"
vm_ssh_private_key_path = "~/.ssh/id_rsa_vm"

# Environment
environment = "homelab"

# Cloud-init configuration (use .local.yml for real deployment)
ansible_cloud_init_file = "cloud-init/ansible-server-example.yml"

# VM Configuration - Example with cloud-init
vms = {
  "ansible" = {
    vm_id            = 100
    name             = "ansible"
    description      = "Ansible control node for VM management"
    cpu_cores        = 2
    memory_dedicated = 4096
    tags             = ["terraform", "automation", "ansible"]

    boot_disk = {
      datastore_id = "local-zfs"
      interface    = "virtio0"
      size         = 64
      file_format  = "raw"
      iothread     = true
      ssd          = false
      discard      = "ignore"
    }

    network_interfaces = [{
      bridge   = "vmbr0"
      model    = "virtio"
      firewall = false
    }]

    ip_config = {
      ipv4_address = "192.168.1.100/24"
      ipv4_gateway = "192.168.1.1"
    }

    clone_template = {
      template_id = 9000
    }

    agent_enabled = true
    protection    = false
    os_type       = "l26"

    user_account = {
      username = "ubuntu"
      password = "ubuntu"
      keys     = []  # populated by cloud-init from SSH key file
    }

    # cloud_init_user_data is handled by external file in main.tf
  }

  # Add other VMs here following the same pattern

  "splunk-idx1" = {
    vm_id            = 135
    name             = "splunk-idx1"
    description      = "Splunk Indexer 1 - Data indexing and storage"
    cpu_cores        = 4
    memory_dedicated = 4096
    tags             = ["terraform", "splunk", "indexer"]
    pool_id          = "splunk"

    boot_disk = {
      datastore_id = "local-zfs"
      interface    = "virtio0"
      size         = 200
      file_format  = "raw"
      iothread     = true
      ssd          = false
      discard      = "ignore"
    }

    network_interfaces = [{
      bridge   = "vmbr0"
      model    = "virtio"
      firewall = true
    }]

    ip_config = {
      ipv4_address = "10.0.1.135/24"
      ipv4_gateway = "10.0.1.1"
    }

    clone_template = {
      template_id = 9000
    }

    agent_enabled = true
    protection    = false
    os_type       = "l26"

    user_account = {
      username = "ubuntu"
      password = "ubuntu"
      keys     = []
    }
  }

  "splunk-idx2" = {
    vm_id            = 136
    name             = "splunk-idx2"
    description      = "Splunk Indexer 2 - Data indexing and storage"
    cpu_cores        = 4
    memory_dedicated = 4096
    tags             = ["terraform", "splunk", "indexer"]
    pool_id          = "splunk"

    boot_disk = {
      datastore_id = "local-zfs"
      interface    = "virtio0"
      size         = 200
      file_format  = "raw"
      iothread     = true
      ssd          = false
      discard      = "ignore"
    }

    network_interfaces = [{
      bridge   = "vmbr0"
      model    = "virtio"
      firewall = true
    }]

    ip_config = {
      ipv4_address = "10.0.1.136/24"
      ipv4_gateway = "10.0.1.1"
    }

    clone_template = {
      template_id = 9000
    }

    agent_enabled = true
    protection    = false
    os_type       = "l26"

    user_account = {
      username = "ubuntu"
      password = "ubuntu"
      keys     = []
    }
  }
}

# Container Configuration
containers = {
  "splunk-mgmt" = {
    vm_id            = 130
    hostname         = "splunk-mgmt"
    description      = "Splunk Management - Search Head, Deployment Server, License Manager, MC, Cluster Manager"
    cpu_cores        = 2
    memory_dedicated = 2048
    memory_swap      = 1024
    tags             = ["terraform", "splunk", "management", "container"]
    pool_id          = "splunk"

    root_disk = {
      datastore_id = "local-zfs"
      size         = 50
    }

    network_interfaces = [{
      name     = "eth0"
      bridge   = "vmbr0"
      firewall = true
    }]

    ip_config = {
      ipv4_address = "10.0.1.130/24"
      ipv4_gateway = "10.0.1.1"
    }
  }
}

# Resource Pool Configuration
pools = {
  "splunk" = {
    comment = "Splunk cluster infrastructure"
  }
}

# Firewall Configuration
management_network = "10.0.1.0/24"
splunk_network     = "10.0.1.130,10.0.1.135,10.0.1.136"

# Storage Configuration (optional)
datastores = {}

# ISO Configuration
proxmox_iso_ubuntu         = "ubuntu-24.04.2-live-server-amd64.iso"
proxmox_ct_template_ubuntu = "ubuntu-24.04-standard_24.04-2_amd64.tar.zst"
