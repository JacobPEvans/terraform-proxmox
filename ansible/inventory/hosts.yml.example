---
# Example inventory - copy to hosts.yml and update with real IPs
all:
  vars:
    ansible_user: ubuntu
    ansible_ssh_private_key_file: ~/.ssh/id_rsa_vm
    ansible_ssh_common_args: '-o StrictHostKeyChecking=no'
  children:
    homelab:
      children:
        logging:
          hosts:
            syslog:
              ansible_host: 192.168.1.120
            splunk:
              ansible_host: 192.168.1.130
        development:
          hosts:
            claude:
              ansible_host: 192.168.1.110
        automation:
          hosts:
            ansible:
              ansible_host: 192.168.1.100
              ansible_connection: local
        containers:
          hosts:
            k3s:
              ansible_host: 192.168.1.140
